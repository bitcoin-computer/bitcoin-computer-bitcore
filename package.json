{
  "name": "bitcoincashflow",
  "version": "0.1.11",
  "description": "A simple, safe, and powerful JavaScript Bitcoin Cash library.",
  "author": "Clemens Ley <ley.clemens@gmail.com>",
  "main": "src/bitcoincash.js",
  "files": ["src/", "dist/"],
  "scripts": {
    "build": "node scripts/build.js",
    "build:tests": "node scripts/build-tests.js",
    "test": "npm run test:node",
    "test:all": "npm run test:node && npm run test:browser",
    "test:node": "nyc --reporter=html --reporter=text mocha",
    "test:browser": "npm run build:tests && karma start",
    "lint": "node scripts/lint.js",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "preversion": "npm test",
    "readme": "mustache package.json README.tpl.md > README.md",
    "version": "npm run build && npm run readme && git add -A dist README.md",
    "postversion": "git push && git push --tags && npm publish",
    "bump": "npm version patch -m 'Bump version to %s.'"
  },
  "keywords": [
    "bitcoin",
    "transaction",
    "address",
    "p2p",
    "ecies",
    "cryptocurrency",
    "blockchain",
    "payment",
    "bip21",
    "bip32",
    "bip37",
    "bip69",
    "bip70",
    "multisig"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/BitcoinDB/BitcoinCashFlow"
  },
  "browser": {
    "request": "browser-request"
  },
  "dependencies": {
    "big-integer": "^1.6.36",
    "bn.js": "=2.0.4",
    "bs58": "=2.0.0",
    "buffer-compare": "=1.0.0",
    "cashaddrjs": "^0.2.9",
    "elliptic": "=3.0.3",
    "inherits": "=2.0.1",
    "lodash": "^4.17.11",
    "unorm": "^1.4.1"
  },
  "devDependencies": {
    "brfs": "^1.6.1",
    "browserify": "^14.5.0",
    "chai": "^1.10.0",
    "coveralls": "^3.0.2",
    "eslint": "^5.6.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.0",
    "jsdoc": "^3.5.5",
    "karma": "^2.0.5",
    "karma-chrome-launcher": "^2.2.0",
    "karma-detect-browsers": "^2.3.3",
    "karma-firefox-launcher": "^1.1.0",
    "karma-mocha": "^1.3.0",
    "mocha": "^4.1.0",
    "mustache": "^2.3.2",
    "nyc": "^11.9.0",
    "prettier": "^1.14.3",
    "shelljs": "^0.8.2",
    "sinon": "^1.13.0",
    "uglify-js": "^3.4.9"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "trailingComma": "all",
    "proseWrap" : "preserve"
  },
  "license": "MIT"
}
